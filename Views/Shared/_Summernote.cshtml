<script>
    $('@Model.SummernoteID').summernote({
    placeholder: 'Nhập thông tin',
    tabsize: 2,
    height: @Model.height,
    toolbar: [
      ['style', ['style']],
      ['font', ['bold', 'underline', 'clear']],
      ['color', ['color']],
      ['para', ['ul', 'ol', 'paragraph']],
      ['table', ['table']],
      ['insert', ['link', 'picture', 'video']],
      ['height',['height']],
      ['view', ['fullscreen', 'codeview', 'help']]
    ]
  }); 

 </script>
